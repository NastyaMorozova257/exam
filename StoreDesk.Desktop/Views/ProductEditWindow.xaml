<Window x:Class="StoreDesk.Desktop.Views.ProductEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Карточка товара" Height="520" Width="540" WindowStartupLocation="CenterScreen"
        MinHeight="420" MinWidth="480"
        Background="{StaticResource BackgroundBrush}" FontFamily="{StaticResource AppFont}">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Padding="0,0,4,0">
            <StackPanel>
                <TextBlock Text="Название" FontSize="14" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,6"/>
                <TextBox Text="{Binding Name}" Style="{StaticResource TextBoxStyle}" Margin="0,0,0,12"/>
                <TextBlock Text="Категория" FontSize="14" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,6"/>
                <ComboBox x:Name="CategoryComboBox" SelectedValue="{Binding CategoryId, Mode=TwoWay}" 
                          SelectedValuePath="Id" DisplayMemberPath="Name" Style="{StaticResource ComboBoxStyle}" Margin="0,0,0,12"/>
                <TextBlock Text="Описание" FontSize="14" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,6"/>
                <TextBox Text="{Binding Description}" Style="{StaticResource TextBoxStyle}" TextWrapping="Wrap" AcceptsReturn="True" MinHeight="56" Margin="0,0,0,12"/>
                <TextBlock Text="Цена" FontSize="14" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,6"/>
                <TextBox Text="{Binding Price}" Style="{StaticResource TextBoxStyle}" Margin="0,0,0,12"/>
                <TextBlock Text="Количество" FontSize="14" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,6"/>
                <TextBox Text="{Binding Quantity}" Style="{StaticResource TextBoxStyle}" Margin="0,0,0,8"/>
            </StackPanel>
        </ScrollViewer>
        <Border Grid.Row="1" Background="{StaticResource BackgroundBrush}" Padding="0,16,0,0" Margin="0,8,0,0" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Сохранить" Click="Save_Click" Style="{StaticResource PrimaryButton}" Margin="0,0,12,0" MinWidth="120"/>
                <Button Content="Отмена" Click="Cancel_Click" Style="{StaticResource SecondaryButton}" MinWidth="100"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
