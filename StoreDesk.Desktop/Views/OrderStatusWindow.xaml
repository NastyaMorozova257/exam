<Window x:Class="StoreDesk.Desktop.Views.OrderStatusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Изменить статус заказа" Height="220" Width="380" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="24">
        <StackPanel>
            <TextBlock Text="Новый статус" FontSize="14" Foreground="#424242" Margin="0,0,0,8"/>
            <ComboBox x:Name="StatusComboBox" DisplayMemberPath="Name" SelectedValuePath="Id" Style="{StaticResource ComboBoxStyle}" Margin="0,0,0,24"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="ОК" Click="Ok_Click" Style="{StaticResource PrimaryButton}" Margin="0,0,12,0"/>
                <Button Content="Отмена" Click="Cancel_Click" Padding="20,12" MinHeight="44"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
