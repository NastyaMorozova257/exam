<Window x:Class="StoreDesk.Desktop.Views.OrderCreateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Новый заказ" Height="560" Width="780" WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}" FontFamily="{StaticResource AppFont}">
    <Grid Margin="28">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Background="{StaticResource SurfaceBrush}" Padding="20,16" Margin="0,0,0,20" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="8">
            <StackPanel>
                <TextBlock Text="Адрес доставки" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,10"/>
                <ComboBox x:Name="AddressComboBox" DisplayMemberPath="City" SelectedValuePath="Id" Style="{StaticResource ComboBoxStyle}" MinWidth="280" FontSize="14"/>
            </StackPanel>
        </Border>
        <TextBlock Grid.Row="1" Text="Позиции заказа" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,10"/>
        <DataGrid Grid.Row="2" x:Name="ItemsGrid" AutoGenerateColumns="False" CanUserAddRows="False" Margin="0,0,0,20" RowHeight="42" FontSize="14"
                  Background="{StaticResource SurfaceBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" HeadersVisibility="Column">
            <DataGrid.Columns>
                <DataGridComboBoxColumn x:Name="ProductColumn" Header="Товар" Width="*" MinWidth="220" DisplayMemberPath="Name" SelectedValuePath="Id" SelectedValueBinding="{Binding ProductId}"/>
                <DataGridTextColumn Header="Количество" Binding="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}" Width="140" MinWidth="120"/>
                <DataGridTextColumn Header="Цена за ед." Binding="{Binding UnitPrice, StringFormat=N2}" Width="120" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Добавить строку" Click="AddRow_Click" Style="{StaticResource PrimaryButton}" Margin="0,0,10,0"/>
            <Button Content="Удалить строку" Click="RemoveRow_Click" Style="{StaticResource SecondaryButton}" Margin="0,0,10,0" MinWidth="120"/>
            <Button Content="Сохранить" Click="Save_Click" Style="{StaticResource PrimaryButton}" Margin="0,0,10,0"/>
            <Button Content="Отмена" Click="Cancel_Click" Style="{StaticResource SecondaryButton}" MinWidth="100"/>
        </StackPanel>
    </Grid>
</Window>
